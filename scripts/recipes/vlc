#  libsidplay2-dev
#  libsidplayfp-dev
#  libsmbclient-dev
#  libsoxr-dev
#  libspeex-dev
#  libspeexdsp-dev
#  libssh2-1-dev
#  libswscale-dev
#  libsystemd-dev
#  libtag1-dev
#  libtar-dev
#  libtheora-dev
#  libtool
#  libtwolame-dev
#  libudev-dev
#  libupnp-dev
#  libva-dev
#  libvdpau-dev
#  libvncserver-dev
#  libvorbis-dev
#  libvpx-dev
#  libx264-dev
#  libx265-dev
#  libxcb-composite0-dev
#  libxcb-keysyms1-dev
#  libxcb-xv0-dev
