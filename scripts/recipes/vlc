#  cvs
#  gettext
#  git
#  liba52-0.7.4-dev
#  libarchive-dev
#  libasound2-dev
#  libass-dev
#  libavahi-client-dev
#  libavc1394-dev
#  libavcodec-dev
#  libavdevice-dev
#  libavformat-dev
#  libbluray-dev
#  libcaca-dev
#  libcddb2-dev
#  libcdio-dev
#  libchromaprint-dev
#  libcrystalhd-dev
#  libdbus-1-dev
#  libdc1394-22-dev
#  libdca-dev
#  libdvbpsi-dev
#  libdvdnav-dev
#  libdvdread-dev
#  libebml-dev
#  libexpat1-dev
#  libfaac-dev
#  libfaad-dev
#  libflac-dev
#  libfluidsynth-dev
#  libfreerdp-dev
#  libfreetype6-dev
#  libfribidi-dev
#  libgcrypt20-dev
#  libgme-dev
#  libgnomevfs2-dev
#  libgstreamer-plugins-base1.0-dev
#  libjack-jackd2-dev
#  libkate-dev
#  liblivemedia-dev
#  liblua5.2-dev
#  libmad0-dev
#  libmatroska-dev
#  libminizip-dev
#  libmodplug-dev
